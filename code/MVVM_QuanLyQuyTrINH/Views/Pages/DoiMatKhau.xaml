<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.DoiMatKhau"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePasswordPage">

    <Grid Background="White">
        <Border Background="#FAFAFA"
                BorderBrush="#3AA0AD"
                BorderThickness="1"
                CornerRadius="10"
                Padding="30"
                Margin="20">
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="🔑 Đổi mật khẩu"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#3AA0AD"
                           Margin="0,0,0,25"/>

                <!-- Lưới nhập liệu -->
                <UniformGrid Columns="2" Rows="3" Margin="0,20,0,0">

                    <!-- Mật khẩu hiện tại -->
                    <TextBlock Text="Mật khẩu hiện tại:"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                    <PasswordBox x:Name="txtOldPassword"
                                 FontSize="16"
                                 Height="40"
                                 Padding="10"
                                 BorderBrush="#3AA0AD"
                                 BorderThickness="1"
                                 Margin="0,10"/>

                    <!-- Mật khẩu mới -->
                    <TextBlock Text="Mật khẩu mới:"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                    <PasswordBox x:Name="txtNewPassword"
                                 FontSize="16"
                                 Height="40"
                                 Padding="10"
                                 BorderBrush="#3AA0AD"
                                 BorderThickness="1"
                                 Margin="0,10"/>

                    <!-- Nhập lại mật khẩu mới -->
                    <TextBlock Text="Nhập lại mật khẩu mới:"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,10"/>
                    <PasswordBox x:Name="txtConfirmPassword"
                                 FontSize="16"
                                 Height="40"
                                 Padding="10"
                                 BorderBrush="#3AA0AD"
                                 BorderThickness="1"
                                 Margin="0,10"/>
                </UniformGrid>

                <!-- Thông báo -->
                <TextBlock x:Name="txtMessage"
                           Foreground="Red"
                           FontSize="14"
                           FontStyle="Italic"
                           Margin="0,15,0,0"/>

                <!-- Nút hành động -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="💾 Lưu thay đổi"
                            Width="150"
                            Height="40"
                            Background="#3AA0AD"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ChangePassword_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
