<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.QuanLyNguoiDung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_QuanLyQuyTrINH.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Quản Lý Người Dùng">

    <Page.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="16" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F4F7F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,20,30,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Width="40" Height="40"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="btnBack_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <Path Data="M20,11H7.83L13.42,5.41L12,4L4,12L12,20L13.41,18.59L7.83,13H20V11Z" 
                                  Fill="#3AA0AD" Stretch="Uniform" Width="16" Height="16"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Quản lý người dùng"
                           Foreground="#3AA0AD"
                           FontSize="24"
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Height="45">
                <Border.Effect>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Border.Effect>

                <Grid VerticalAlignment="Center" Margin="15,0">
                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                          Fill="Gray" Width="18" Height="18" HorizontalAlignment="Left"/>

                    <TextBox x:Name="SearchTextBox"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="30,0,0,0"
                             VerticalContentAlignment="Center"
                             Height="45"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <TextBlock x:Name="PlaceholderText"
                               Text="Tìm kiếm theo tên, mã nhân viên..."
                               Foreground="#AAA"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="30,0,0,0"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Border Background="White" CornerRadius="10" Height="45" Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Border.Effect>
                    <ComboBox x:Name="cbFilter" 
                              Width="180" Height="45"
                              BorderThickness="0"
                              Background="Transparent"
                              VerticalContentAlignment="Center"
                              Padding="15,0"
                              SelectedIndex="0"
                              SelectionChanged="cbFilter_SelectionChanged">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem Content="Tất cả phòng ban"/>
                        <ComboBoxItem Content="Phòng Kỹ Thuật (PB01)"/>
                        <ComboBoxItem Content="Phòng Nhân Sự (PB02)"/>
                        <ComboBoxItem Content="Phòng Kinh Doanh (PB03)"/>
                    </ComboBox>
                </Border>

                <Button Content="+ Thêm Mới"
                        Background="#3AA0AD"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Height="45" Width="140"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnAddEmployee_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="#3AA0AD" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="2" Padding="20,0" VerticalScrollBarVisibility="Auto" BorderThickness="0">
            <ItemsControl x:Name="EmployeeList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Height="190" Margin="15" Background="White" CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect Color="#B0B0B0" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="15,15,15,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="60" Height="60" CornerRadius="30" Background="#E0F2F1" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding HoTen}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   TextAlignment="Center" TextWrapping="Wrap"
                                                   Foreground="#3AA0AD" FontWeight="Bold" FontSize="12" Padding="2"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Text="{Binding HoTen}" FontSize="16" FontWeight="Bold" Foreground="#333" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding MaVaiTroNavigation.TenVaiTro}" FontSize="13" Foreground="#3AA0AD" FontWeight="SemiBold" Margin="0,2"/>

                                        <Separator Background="#F0F0F0" Margin="0,8"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="🆔 " FontSize="10"/>
                                            <TextBlock Text="{Binding idToString}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="📧 " FontSize="10"/>
                                            <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="🏢 " FontSize="10"/>
                                            <TextBlock Text="{Binding NhanVien.MaPb}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Border x:Name="ActionPanel" Grid.Row="0" Grid.RowSpan="2" 
                                        Background="#FFFFFF" CornerRadius="12" Opacity="0">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Thao tác" HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Style="{StaticResource ActionButtonStyle}" Background="#29B6F6" Click="ViewEmployee_Click" ToolTip="Xem">
                                                <Path Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                            </Button>
                                            <Button Style="{StaticResource ActionButtonStyle}" Background="#66BB6A" Click="EditEmployee_Click" ToolTip="Sửa">
                                                <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" Fill="White" Width="14" Height="14" Stretch="Uniform"/>
                                            </Button>
                                            <Button Style="{StaticResource ActionButtonStyle}" Background="#EF5350" Click="DeleteEmployee_Click" ToolTip="Xóa">
                                                <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Fill="White" Width="14" Height="14" Stretch="Uniform"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ActionPanel" Storyboard.TargetProperty="Opacity" To="0.95" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ActionPanel" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>