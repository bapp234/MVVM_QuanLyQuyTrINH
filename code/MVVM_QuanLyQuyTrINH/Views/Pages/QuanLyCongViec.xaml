<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.QuanLyCongViec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Title="Quản Lý Công Việc">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== HEADER ===================== -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="⬅ Quay về"
                    Width="120"
                    Height="36"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnBack_Click"/>

            <TextBlock Text="Quản Lý Công Việc"
                       Grid.Column="1"
                       Foreground="#3AA0AD"
                       FontSize="24"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Grid>

        <!-- ===================== THANH TÌM KIẾM ===================== -->
        <Grid Grid.Row="1" Height="45" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ô nhập -->
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         FontSize="16"
                         Padding="10,0,0,0"
                         VerticalContentAlignment="Center"
                         BorderBrush="#3AA0AD"
                         BorderThickness="1"
                         TextChanged="SearchTextBox_TextChanged"/>

                <TextBlock x:Name="PlaceholderText"
                           Text="🔍 Nhập tên công việc..."
                           Foreground="Gray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Bộ lọc -->
            <ComboBox x:Name="cbFilter"
                      Grid.Column="1"
                      Margin="10,0,0,0"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Width="140"
                      SelectedIndex="0"
                      SelectionChanged="cbFilter_SelectionChanged">
                <ComboBoxItem Content="Tất cả"/>
                <ComboBoxItem Content="Đang thực hiện"/>
                <ComboBoxItem Content="Hoàn thành"/>
                <ComboBoxItem Content="Tạm dừng"/>
            </ComboBox>

            <!-- Nút tìm -->
            <Button Grid.Column="2"
                    Margin="10,0,0,0"
                    Content="Tìm kiếm"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnSearch_Click"/>

            <!-- Nút tạo mới -->
            <Button Grid.Column="3"
                    Content="＋ Tạo Công Việc"
                    Width="160"
                    Background="SeaGreen"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    HorizontalAlignment="Right"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnThemCongViec_Click"/>
        </Grid>

        <!-- ===================== DANH SÁCH CÔNG VIỆC ===================== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TaskList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="TaskCard"
                                Background="White"
                                BorderBrush="#3AA0AD"
                                BorderThickness="1"
                                CornerRadius="10"
                                Width="280"
                                Height="200"
                                Margin="10"
                                Padding="12"
                                Cursor="Hand">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="{Binding TenCv}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#2C8A8A"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="{Binding MaCv, StringFormat='Mã CV: {0}'}"
                                               Foreground="Gray"
                                               FontSize="14"/>

                                    <TextBlock Text="{Binding TrangThai, StringFormat='Trạng thái: {0}'}"
                                               FontSize="13"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{Binding DoUuTien, StringFormat='Độ ưu tiên: {0}'}"
                                               Foreground="#555"
                                               FontSize="13"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{Binding HanHoanThanh, StringFormat='Hạn: {0:dd/MM/yyyy}'}"
                                               Foreground="#555"
                                               FontSize="13"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{Binding MaDuAnNavigation.TenDuAn, StringFormat='Dự án: {0}'}"
                                               Foreground="#777"
                                               FontSize="13"
                                               Margin="0,4,0,0"/>

                                    <TextBlock Text="{Binding MaNvphuTrachNavigation.MaNvNavigation.HoTen, StringFormat='Phụ trách: {0}'}"
                                               Foreground="#444"
                                               FontSize="13"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Nút chức năng -->
                                <StackPanel x:Name="ButtonPanel"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,0,5"
                                            Visibility="Collapsed">
                                    <Button Content="👁 Xem"
                                            Margin="5,0,0,0"
                                            Padding="8,2"
                                            FontSize="12"
                                            Background="#2196F3"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="ViewTask_Click"/>

                                    <Button Content="✏️ Sửa"
                                            Margin="5,0,0,0"
                                            Padding="8,2"
                                            FontSize="12"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="EditTask_Click"/>

                                    <Button Content="🗑 Xóa"
                                            Margin="5,0,0,0"
                                            Padding="8,2"
                                            FontSize="12"
                                            Background="#E53935"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="DeleteTask_Click"/>
                                </StackPanel>
                            </Grid>

                            <!-- Trigger hover -->
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonPanel"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                                                        Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonPanel"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0"
                                                                        Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
