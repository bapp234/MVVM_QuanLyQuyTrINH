<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Notifications.CanhBao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_QuanLyQuyTrINH.Views.Notifications"
        mc:Ignorable="d"
        Title="Cảnh Báo" 
        Height="250" Width="420"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" 
            CornerRadius="15"
            BorderBrush="#FF9800" 
            BorderThickness="1"
            Margin="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" 
                              RenderingBias="Quality" ShadowDepth="2" 
                              Color="Gray" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <Button Content="✕" 
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Width="30" Height="30"
                    Background="Transparent" Foreground="#999"
                    BorderThickness="0" FontSize="16" FontWeight="Bold"
                    Cursor="Hand"
                    Click="btnCancel_Click"/>

            <StackPanel Grid.Row="0" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Border Width="60" Height="60" CornerRadius="30" Background="#FFF3E0">
                    <TextBlock Text="?" 
                               FontSize="40" FontWeight="Bold" 
                               Foreground="#FF9800"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="XÁC NHẬN" 
                           Foreground="#FF9800"
                           FontWeight="Bold" FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <TextBlock x:Name="txtMessage"
                       Grid.Row="1"
                       Text="Bạn có chắc chắn muốn xóa mục này không?"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="15"
                       Foreground="#444"
                       Margin="30,5,30,10"/>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                
                <Button Content="Đồng ý"
                        Width="100" Height="35"
                        Background="#FF9800"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0"
                        Click="btnConfirm_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Không"
                        Width="100" Height="35"
                        Background="#EEEEEE"
                        Foreground="#555"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>