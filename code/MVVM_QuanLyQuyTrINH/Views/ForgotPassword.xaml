<Window x:Class="MVVM_QuanLyQuyTrINH.Views.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_QuanLyQuyTrINH"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Forgot Password"
        Height="500" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Bên trái: chào mừng -->
        <Border CornerRadius="20,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA0AD" Offset="0.0"/>
                    <GradientStop Color="#3AADA1" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Canvas>
                    <Polygon Points="0,20 230,140 0,270" Fill="#4EB1B6"/>
                    <Polygon Points="100,400 200,370 180,470" Fill="#4EB1B6" Canvas.Left="70" Canvas.Top="15"/>
                    <Ellipse Width="80" Height="80" Canvas.Left="186" Canvas.Top="235" Fill="#4EB1B6"/>
                    <Rectangle Width="120" Height="120" Canvas.Left="26" Canvas.Top="297" Fill="#4EB1B6"/>
                </Canvas>

                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="Vui lòng nhập thông tin cần thiết" Style="{StaticResource normalText}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Bên phải: form đăng nhập -->
        <Border Background="White" Grid.Column="1" CornerRadius="0 20 20 0">
            <Grid Margin="40">
                <!-- Nút đóng -->
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" 
                        Background="Transparent" Foreground="Gray" BorderThickness="0" 
                        FontWeight="Bold" Click="Close_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Quên mật khẩu" Style="{StaticResource tittleText}" 
                               Foreground="#3AD19B" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Tên đăng nhập" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUserName" Height="35" Padding="10,10,5,5" BorderBrush="#3AD19B" BorderThickness="1" />

                    <TextBlock Text="Email" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtEmail" Height="35" Padding="10,10,5,5" BorderBrush="#3AD19B" BorderThickness="1" />


                    <Button Content="Gửi thông tin" Background="#3AD19B" Foreground="White" IsDefault="True"
                            FontWeight="Bold" Height="40" Margin="0,25,0,0" BorderThickness="0" Click="Sent_Click"/>

                    <!-- Quay lai Login -->
                    <TextBlock Text="Quay lại đăng nhập" 
                               Foreground="#3AD19B" FontWeight="Bold" 
                               Cursor="Hand" HorizontalAlignment="Center" 
                               Margin="0,15,0,0" MouseDown="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
