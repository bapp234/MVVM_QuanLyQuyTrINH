<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Windows.SuaCongViec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa Công Việc" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
                WindowStyle="None">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="✏️ Sửa Công Việc"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#3AA0AD"
                   Margin="0,0,0,20"/>

        <!-- Form sửa công việc -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Tên công việc:" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CongViec.TenCv}" Width="400"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Mô tả:" Width="120" VerticalAlignment="Top"/>
                <TextBox Text="{Binding CongViec.MoTa}" Width="400" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Trạng thái:" Width="120" VerticalAlignment="Center"/>
                <ComboBox Width="150" SelectedValue="{Binding CongViec.TrangThai}">
                    <ComboBoxItem Content="Chưa bắt đầu"/>
                    <ComboBoxItem Content="Đang thực hiện"/>
                    <ComboBoxItem Content="Hoàn thành"/>
                    <ComboBoxItem Content="Tạm dừng"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Ngày giao:" Width="120" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding CongViec.NgayGiao}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Hạn hoàn thành:" Width="120" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding CongViec.HanHoanThanh}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Nhân viên phụ trách:" Width="120" VerticalAlignment="Center"/>
                <ComboBox Width="250"
                          ItemsSource="{Binding DanhSachNhanVien}"
                          DisplayMemberPath="MaNvNavigation.HoTen"
                          SelectedValuePath="MaNv"
                          SelectedValue="{Binding CongViec.MaNvphuTrach}"/>
            </StackPanel>
        </StackPanel>

        <!-- Nút Lưu và Đóng -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="100" Height="35" Background="#3AA0AD" Foreground="White" FontWeight="Bold"
                    Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Đóng" Width="100" Height="35" Background="Gray" Foreground="White" FontWeight="Bold"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
