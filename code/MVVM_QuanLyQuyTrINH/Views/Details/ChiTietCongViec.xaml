<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Details.ChiTietCongViec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Công Việc"
        Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Margin="20" CornerRadius="10" BorderBrush="#3AA0AD" BorderThickness="2" Padding="20" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="📝 Thông Tin Chi Tiết Công Việc"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#3AA0AD"
                       Margin="0,0,0,20"/>

            <!-- Nội dung chi tiết -->
            <StackPanel Grid.Row="1" Margin="10,0,0,0">

                <TextBlock Text="{Binding CongViec.TenCv, StringFormat='Tên công việc: {0}'}"
                           FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CongViec.MoTa, StringFormat='Mô tả: {0}'}"
                           FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CongViec.NgayGiao, StringFormat='Ngày giao: {0:dd/MM/yyyy}'}"
                           FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CongViec.HanHoanThanh, StringFormat='Hạn hoàn thành: {0:dd/MM/yyyy}'}"
                           FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CongViec.TrangThai, StringFormat='Trạng thái: {0}'}"
                           FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding TenNhanVienPhuTrach, StringFormat='Nhân viên phụ trách: {0}'}"
                           FontSize="16" Margin="0,0,0,20" Foreground="#3AA0AD" FontWeight="Bold"/>

                <TextBlock Text="Lịch sử công việc:"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#3AA0AD" Margin="0,0,0,10"/>

                <ListView x:Name="ListViewLichSu" Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Ngày cập nhật" Width="130"
                                            DisplayMemberBinding="{Binding NgayCapNhat, StringFormat=dd/MM/yyyy HH:mm}"/>
                            <GridViewColumn Header="Nội dung" Width="350"
                                            DisplayMemberBinding="{Binding NoiDung}"/>
                            <GridViewColumn Header="Người cập nhật" Width="150"
                                            DisplayMemberBinding="{Binding TenNhanVien}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Đóng"
                        Width="100"
                        Height="35"
                        Background="#3AA0AD"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
