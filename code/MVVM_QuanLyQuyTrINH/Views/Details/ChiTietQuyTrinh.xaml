<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Details.ChiTietQuyTrinh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Quy Trình"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid VerticalAlignment="Center">

        <!-- ===== KHUNG VIỀN POPUP ===== -->
        <Border Background="White"
                CornerRadius="15"
                BorderBrush="#3AA0AD"
                BorderThickness="2"
                Padding="30"
                Width="1100"
                Height="720"
                SnapsToDevicePixels="True">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- TIÊU ĐỀ DỰ ÁN -->
                    <TextBlock Text="{Binding TenDuAn}"
                               FontSize="34"
                               FontWeight="Bold"
                               Foreground="#2C8A8A"
                               Margin="0,0,0,10"/>

                    <!-- Thông tin chung -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <StackPanel Width="350">
                            <TextBlock Text="{Binding MaDuAn, StringFormat='Mã dự án: {0}'}"
                                       FontSize="18"
                                       Foreground="#444"/>

                            <TextBlock Text="{Binding NgayBatDau, StringFormat='Bắt đầu: {0:dd/MM/yyyy}'}"
                                       FontSize="18" Margin="0,8,0,0"/>

                            <TextBlock Text="{Binding NgayKetThuc, StringFormat='Kết thúc: {0:dd/MM/yyyy}'}"
                                       FontSize="18" Margin="0,8,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="0,10,0,20"/>

                    <!-- DANH SÁCH BƯỚC -->
                    <TextBlock Text="Các bước trong quy trình"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"
                               Foreground="#2C8A8A"/>

                    <ItemsControl ItemsSource="{Binding DanhSachBuoc}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="2"
                                        BorderBrush="#3AA0AD"
                                        CornerRadius="10"
                                        Margin="0,0,0,18"
                                        Padding="15"
                                        Background="#F7FFFF">

                                    <StackPanel>
                                        <TextBlock Text="{Binding ThuTu, StringFormat='Bước {0}'}"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   Foreground="#2C8A8A"/>

                                        <TextBlock Text="{Binding TenBuoc}"
                                                   FontSize="18"
                                                   Margin="0,6,0,0"/>

                                        <TextBlock Text="{Binding Mota}"
                                                   FontSize="16"
                                                   Foreground="#555"
                                                   TextWrapping="Wrap"
                                                   Margin="0,10,0,0"/>

                                        <TextBlock Text="{Binding TrangThai, StringFormat='Trạng thái: {0}'}"
                                                   FontWeight="SemiBold"
                                                   FontSize="16"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Nút -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">

                        <Button Content="✎ Sửa"
                                Width="140"
                                Height="40"
                                Background="Orange"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="16"
                                Click="Edit_Click"/>

                        <Button Content="Đóng"
                                Margin="20,0,0,0"
                                Width="140"
                                Height="40"
                                Background="#3AA0AD"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="16"
                                Click="Close_Click"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Border>

    </Grid>

</Window>
