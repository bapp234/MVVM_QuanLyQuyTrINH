<Window x:Class="MVVM_QuanLyQuyTrINH.Views.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="1350" Height="800"
        Background="#F4F8F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU TRÁI -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA0AD" Offset="0.0"/>
                    <GradientStop Color="#3AD19B" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Canvas>
                    <Polygon Points="0,20 230,140 0,270" Fill="#4EB1B6" Opacity="0.4"/>
                    <Polygon Points="100,400 200,370 180,470" Fill="DarkKhaki" Canvas.Left="-30" Canvas.Top="304" Opacity="0.5"/>
                    <Ellipse Width="80" Height="80" Canvas.Left="130" Canvas.Top="519" Fill="#4EB1B6" Opacity="0.5"/>
                    <Rectangle Width="120" Height="120" Canvas.Left="-50" Canvas.Top="459" Fill="#c9c9c9" Opacity="0.4"/>
                </Canvas>

                <StackPanel VerticalAlignment="Stretch" Margin="0,40,0,20">
                    <TextBlock Text="⚙️ QUẢN LÝ QUY TRÌNH"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="20,0,0,40"/>

                    <!-- Các nút chuyển trang -->
                    <Button Content="  🏠  Trang chủ" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="TrangChu_Click"/>
                    <Button x:Name="btnQuanLy" Content="  👥  Quản lý" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="QuanLy_Click"/>
                    <Button Content="  📄  Quy trình" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="QuyTrinh_Click"/>
                    <Button Content="  🏢  Công việc" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="CongViec_Click"/>
                    <Button Content="  📊  Báo cáo" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="BaoCao_Click"/>
                    <Button Content="  ⚙️  Cài đặt" Style="{StaticResource MenuButtonStyle}" Margin="10" Click="CaiDat_Click"/>
                    <Button Content="  🚪  Đăng xuất" Style="{StaticResource MenuButtonStyle}" Margin="10 240" Click="Logout_Click"/>

                </StackPanel>
            </Grid>
        </Border>

        <!-- ICON GÓC PHẢI TRÊN -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0">
            <Button Width="38" Height="38"
                    BorderThickness="0"
                    Background="DimGray"
                    Cursor="Hand"
                    ToolTip="Thông báo"
                    Margin="0,0,10,0"
                    FontSize="18"
                    Content="🔔"
                    Style="{StaticResource buttonCircle}"/>

            <Button Width="38" Height="38"
                    Background="CadetBlue"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Tài khoản"
                    FontSize="18"
                    Content="👤"
                    Style="{StaticResource buttonCircle}"
                    Click="btnThongTinCaNhan_Click"/>

            <TextBlock Text="{Binding HoTen}"
                       Foreground="#4EB1B6"
                       FontSize="20"           
                       VerticalAlignment="Center"
                       Margin="10,0,0,5"/>
        </StackPanel>

        <!-- NỘI DUNG CHÍNH (Frame để chứa các Page) -->
        <Border Grid.Column="1" Margin="20,80,20,20" CornerRadius="10" Background="White">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Loaded="MainFrame_Loaded"/>
        </Border>
    </Grid>
</Window>
