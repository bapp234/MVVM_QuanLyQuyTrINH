<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.QuanLyQuyTrinh"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Title="Quản Lý Quy Trình">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ===================== HEADER ===================== -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="⬅ Quay về"
                    Width="120"
                    Height="36"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnBack_Click"/>

            <TextBlock Text="Quản Lý Quy Trình"
                       Grid.Column="1"
                       Foreground="#3AA0AD"
                       FontSize="24"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Grid>


        <!-- ===================== THANH TÌM KIẾM ===================== -->
        <Grid Grid.Row="1" Height="45" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ô nhập -->
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         FontSize="16"
                         Padding="10,0,0,0"
                         VerticalContentAlignment="Center"
                         BorderBrush="#3AA0AD"
                         BorderThickness="1"
                         TextChanged="SearchTextBox_TextChanged"/>

                <TextBlock x:Name="PlaceholderText"
                           Text="🔍 Nhập thông tin..."
                           Foreground="Gray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Filter -->
            <ComboBox x:Name="cbFilter"
                      Grid.Column="1"
                      Margin="10,0,0,0"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Width="140"
                      SelectedIndex="0"
                      SelectionChanged="cbFilter_SelectionChanged">
                <ComboBoxItem Content="Tất cả"/>
                <ComboBoxItem Content="Đang thực hiện"/>
                <ComboBoxItem Content="Hoàn thành"/>
                <ComboBoxItem Content="Tạm dừng"/>
            </ComboBox>

            <!-- Nút tìm -->
            <Button Grid.Column="2"
                    Margin="10,0,0,0"
                    Content="Tìm kiếm"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Nút tạo mới -->
            <Button Grid.Column="3"
                    Content="＋ Tạo Quy Trình"
                    Width="160"
                    Background="SeaGreen"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    HorizontalAlignment="Right"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnThemDuAn_Click"/>
        </Grid>


        <!-- ===================== DANH SÁCH DỰ ÁN ===================== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProcessList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   Margin="0,10,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#3AA0AD"
                                BorderThickness="1"
                                CornerRadius="10"
                                Width="280"
                                Height="150"
                                Margin="10"
                                Padding="12"
                                Cursor="Hand"
                                MouseLeftButtonUp="Border_MouseLeftButtonUp">

                            <StackPanel>
                                <TextBlock Text="{Binding TenDuAn}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2C8A8A"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding MaDuAn, StringFormat='Mã dự án: {0}'}"
                                           Foreground="Gray"
                                           FontSize="14"/>

                                <TextBlock Text="{Binding TrangThai}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>

                                <TextBlock Text="{Binding NgayBatDau, StringFormat='Bắt đầu: {0:dd/MM/yyyy}'}"
                                           Foreground="#555"
                                           FontSize="13"
                                           Margin="0,4,0,0"/>

                                <TextBlock Text="{Binding NgayKetThuc, StringFormat='Kết thúc: {0:dd/MM/yyyy}'}"
                                           Foreground="#555"
                                           FontSize="13"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Page>
