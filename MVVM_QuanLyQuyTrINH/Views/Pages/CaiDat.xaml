<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.CaiDat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_QuanLyQuyTrINH.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Caidat">

    <Grid Background="White">
        <!-- Tiêu đề -->
        <TextBlock Text="Cài đặt"
                   Foreground="#3AA0AD"
                   FontSize="22"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,50,0,0"/>

        <!-- Hình minh họa hoặc biểu tượng -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="150" Height="150" Fill="#E6F6F7"/>
            <TextBlock Text="🏢"
                       FontSize="60"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,-110,0,0"/>
        </StackPanel>

        <!-- Gợi ý chức năng -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <TextBlock Text="→ Chọn mục ở menu bên trái để bắt đầu làm việc"
                       FontSize="16"
                       Foreground="Gray"
                       FontStyle="Italic"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
