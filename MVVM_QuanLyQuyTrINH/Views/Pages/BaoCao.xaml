<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.BaoCao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Báo cáo"
      Background="#F5F7FA"
      FontSize="14" FontFamily="Segoe UI">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D1D9E6" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <StackPanel>

            <TextBlock Text="Báo Cáo Tổng Quan" FontSize="28" FontWeight="Bold" Foreground="#2D3748" Margin="0,0,0,25"/>

            <UniformGrid Columns="4" Margin="0,0,-15,20">

                <Border Style="{StaticResource CardStyle}" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng Dự Án" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="{Binding TongSoDuAn}" Style="{StaticResource ValueText}" Foreground="#3AA0AD"/>
                        </StackPanel>

                        <Viewbox Grid.Column="1" Width="40" Height="40" HorizontalAlignment="Right">
                            <Grid>
                                <Path Data="M3,3H21V21H3V3M5,5V19H19V5H5Z" Fill="#E6FFFA"/>
                                <Path Data="M3,3H21V21H3V3M5,5V19H19V5H5Z" Stroke="#3AA0AD" StrokeThickness="2"/>
                            </Grid>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Nhân Sự" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="{Binding TongSoNhanVien}" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <Viewbox Grid.Column="1" Width="40" Height="40">
                            <Grid>
                                <Path Fill="#EDF2F7" Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
                                <Path Stroke="#A0AEC0" StrokeThickness="1" Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
                            </Grid>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Tổng Task" Style="{StaticResource LabelText}"/>
                            <TextBlock Text="{Binding TongCv}" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <Viewbox Grid.Column="1" Width="40" Height="40">
                            <Grid>
                                <Path Fill="#EBF8FF" Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19M10,17L5,12L6.41,10.58L10,14.17L17.59,6.58L19,8L10,17Z"/>
                                <Path Stroke="#4299E1" StrokeThickness="1" Data="M10,17L5,12L6.41,10.58L10,14.17L17.59,6.58L19,8L10,17Z"/>
                            </Grid>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource CardStyle}" Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Xong" FontSize="11" Foreground="#718096" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TongCvHoanThanh}" FontWeight="Bold" Foreground="#48BB78" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="1" Width="1" Background="#E2E8F0" Margin="0,10"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Đang làm" FontSize="11" Foreground="#718096" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TongCvDangLam}" FontWeight="Bold" Foreground="#4299E1" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="3" Width="1" Background="#E2E8F0" Margin="0,10"/>

                        <StackPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Trễ" FontSize="11" Foreground="#718096" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TongCvTreHan}" FontWeight="Bold" Foreground="#F56565" FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </UniformGrid>

            <TextBlock Text="Chi Tiết Dự Án" FontSize="20" FontWeight="Bold" Foreground="#2D3748" Margin="0,10,0,15"/>

            <ItemsControl ItemsSource="{Binding BaoCaoDuAns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Width="350" Height="240">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Padding="20,15" BorderBrush="#F7FAFC" BorderThickness="0,0,0,1">
                                    <DockPanel>
                                        <Border Width="4" Height="20" Background="#3AA0AD" CornerRadius="2" Margin="0,0,10,0" DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding TenDuAn}" FontSize="16" FontWeight="Bold" Foreground="#2D3748" TextTrimming="CharacterEllipsis"/>
                                    </DockPanel>
                                </Border>

                                <Grid Grid.Row="1" Margin="20,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Tổng CV" FontSize="12" Foreground="#A0AEC0"/>
                                        <TextBlock Text="{Binding TongCv}" FontSize="16" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Hoàn thành" FontSize="12" Foreground="#A0AEC0"/>
                                        <TextBlock Text="{Binding CvhoanThanh}" FontSize="16" FontWeight="SemiBold" Foreground="#48BB78"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="Đang làm" FontSize="12" Foreground="#A0AEC0"/>
                                        <TextBlock Text="{Binding CvdangLam}" FontSize="16" FontWeight="SemiBold" Foreground="#4299E1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Trễ hạn" FontSize="12" Foreground="#A0AEC0"/>
                                        <TextBlock Text="{Binding CvtreHan}" FontSize="16" FontWeight="SemiBold" Foreground="#F56565"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="2" Margin="20,0,20,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                        <TextBlock Text="Tiến độ tổng thể" FontSize="12" Foreground="#718096" DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding TyLeHoanThanh, StringFormat={}{0:P0}}" FontSize="12" FontWeight="Bold" Foreground="#3AA0AD" DockPanel.Dock="Right"/>
                                    </DockPanel>

                                    <ProgressBar Grid.Row="1" Height="8" BorderThickness="0" 
                                                 Value="{Binding TyLeHoanThanh}" Maximum="1"
                                                 Foreground="#3AA0AD" Background="#E2E8F0">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,310,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>

                                    <TextBlock Grid.Row="1" Text="{Binding NgayBaoCao, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                               HorizontalAlignment="Right" Margin="0,15,0,-10" FontSize="10" Foreground="#CBD5E0" FontStyle="Italic"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Page>