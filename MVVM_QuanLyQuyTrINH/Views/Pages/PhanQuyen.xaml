<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.PhanQuyen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1000"
      Title="Phân Quyền">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== HEADER ===================== -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="⬅ Quay về"
                    Width="120"
                    Height="36"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnBack_Click"/>

            <TextBlock Text="Phân Quyền Nhân Viên"
                       Grid.Column="1"
                       Foreground="#3AA0AD"
                       FontSize="24"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Grid>

        <!-- ===================== THANH TÌM KIẾM ===================== -->
        <Grid Grid.Row="1" Height="45" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ô nhập -->
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         FontSize="16"
                         Padding="10,0,0,0"
                         VerticalContentAlignment="Center"
                         BorderBrush="#3AA0AD"
                         BorderThickness="1"
                         TextChanged="SearchTextBox_TextChanged"/>

                <TextBlock x:Name="PlaceholderText"
                           Text="🔍 Nhập tên hoặc mã nhân viên..."
                           Foreground="Gray"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False"/>
            </Grid>

            <!-- Nút tìm -->
            <Button Grid.Column="1"
                    Margin="10,0,0,0"
                    Content="Tìm kiếm"
                    Background="#3AA0AD"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="40"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>

        <!-- ===================== DANH SÁCH PHÂN QUYỀN ===================== -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="PermissionList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   Margin="0,10,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#3AA0AD"
                                BorderThickness="1"
                                CornerRadius="10"
                                Width="280"
                                Height="150"
                                Margin="10"
                                Padding="12">

                            <StackPanel>
                                <TextBlock Text="{Binding HoTen}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2C8A8A"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="{Binding UserId, StringFormat='Mã nhân viên: {0}'}"
                                           Foreground="Gray"
                                           FontSize="14"/>

                                <!-- Vai trò -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,10,0,0"
                                            VerticalAlignment="Center">

                                    <TextBlock Text="Vai trò:"
                                               Foreground="#333"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"/>

                                    <ComboBox Width="130"
                                              ItemsSource="{Binding DataContext.VaiTroList, RelativeSource={RelativeSource AncestorType=Page}}"
                                              DisplayMemberPath="TenVaiTro"
                                              SelectedValuePath="MaVaiTro"
                                              SelectedValue="{Binding MaVaiTro, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <Button Content="💾 Cấp quyền"
                                        Width="120"
                                        Height="32"
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Right"
                                        Background="#3AA0AD"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="btnCapQuyen_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
