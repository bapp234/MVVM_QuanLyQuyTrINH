    <Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.QuyTrinh"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          mc:Ignorable="d"
          d:DesignHeight="600" 
          d:DesignWidth="1000"
          Title="Quy Trình">

        <Grid Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== TIÊU ĐỀ ===== -->
            <TextBlock Text="Quy Trình"
                       Foreground="#3AA0AD"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Margin="10,10,0,10"/>

            <!-- ===== THANH TÌM KIẾM ===== -->
            <Grid Grid.Row="0" Margin="10,60,10,20" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ô tìm kiếm -->
                <Grid>
                    <TextBox x:Name="SearchTextBox"
                             FontSize="16"
                             Padding="10,0,0,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#3AA0AD"
                             BorderThickness="1"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <!-- Placeholder -->
                    <TextBlock x:Name="PlaceholderText"
                               Text="🔍 Nhập thông tin..."
                               Foreground="Gray"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False"
                               Panel.ZIndex="10"/>
                </Grid>

                <!-- Lọc trạng thái -->
                <ComboBox x:Name="cbFilter"
                          Grid.Column="1"
                          Margin="10,0,0,0"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          SelectionChanged="cbFilter_SelectionChanged"
                          SelectedIndex="0"
                          Width="140">
                    <ComboBoxItem Content="Tất cả"/>
                    <ComboBoxItem Content="Đang thực hiện"/>
                    <ComboBoxItem Content="Hoàn thành"/>
                    <ComboBoxItem Content="Tạm dừng"/>
                </ComboBox>

                <!-- Nút tìm kiếm -->
                <Button Grid.Column="2"
                        Margin="10,0,0,0"
                        Content="Tìm kiếm"
                        Background="#3AA0AD"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Nút tạo quy trình -->
                <Button Grid.Column="3"
                        Content="＋ Tạo Quy Trình"
                        Background="SeaGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Width="150"
                        Cursor="Hand"/>
            </Grid>

            <!-- ===== KHUNG DANH SÁCH QUY TRÌNH ===== -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ProcessList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#3AA0AD"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Width="280" 
                                    Height="150"
                                    Margin="10"
                                    Padding="10"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="Border_MouseLeftButtonUp">

                                <StackPanel>
                                    <TextBlock Text="{Binding TenDuAn}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#2C8A8A"
                                               Margin="0,0,0,6"/>

                                    <TextBlock Text="{Binding MaDuAn, StringFormat='Mã dự án: {0}'}"
                                               Foreground="Gray"
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding TrangThai}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,5,0,0"/>

                                    <TextBlock Text="{Binding NgayBatDau, StringFormat='Bắt đầu: {0:dd/MM/yyyy}'}"
                                               Foreground="#555"
                                               FontSize="13"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding NgayKetThuc, StringFormat='Kết thúc: {0:dd/MM/yyyy}'}"
                                                 Foreground="#555"
                                                 FontSize="13"
                                                 Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </Page>
