<Page x:Class="MVVM_QuanLyQuyTrINH.Views.Pages.TrangChu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F5F8FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="1.1*"/>
            </Grid.ColumnDefinitions>

            <!-- ===================================== -->
            <!-- ===========  CỘT TRÁI  ============== -->
            <!-- ===================================== -->
            <StackPanel Grid.Column="0" Margin="0,0,30,0">

                <!-- TIÊU ĐỀ -->
                <TextBlock Text="Trang chủ hệ thống quản lý quy trình"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C8A8A"
                       Margin="0,0,0,25"/>

                <!-- ====  CARD: THÔNG BÁO MỚI ==== -->
                <Border Background="White" CornerRadius="12"
                    Padding="18" Margin="0 0 0 25"
                    BorderBrush="#3AA0AD" BorderThickness="1"
                    Effect="{DynamicResource DropShadow}">
                    <StackPanel>
                        <TextBlock Text="🔔 Thông báo mới nhất"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="#2C8A8A"
                               Margin="0 0 0 12"/>

                        <ItemsControl ItemsSource="{Binding DanhSachThongBao}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F7FEFF"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0 0 0 12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TieuDe}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>

                                            <TextBlock Text="{Binding NoiDung}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#6F6F6F"
                                                   Margin="0,3,0,0"/>

                                            <TextBlock Text="{Binding NgayGui, StringFormat='Ngày gửi: {0:dd/MM/yyyy HH:mm}'}"
                                                   Foreground="#3AA0AD"
                                                   FontSize="12"
                                                   Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


                <!-- ====  CARD: LỊCH SỬ CÔNG VIỆC ==== -->
                <Border Background="White" CornerRadius="12"
                    Padding="18" Margin="0 0 0 25"
                    BorderBrush="#3AA0AD" BorderThickness="1"
                    Effect="{DynamicResource DropShadow}">
                    <StackPanel>
                        <TextBlock Text="📝 Lịch sử công việc"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="#2C8A8A"
                               Margin="0 0 0 12"/>

                        <ItemsControl ItemsSource="{Binding DanhSachLichSu}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0FAFF"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0 0 0 12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding NoiDung}"
                                                   FontWeight="SemiBold"
                                                   FontSize="15"/>

                                            <TextBlock Text="{Binding TrangThaiMoi, StringFormat='Trạng thái: {0}'}"
                                                   Foreground="#6F6F6F"
                                                   Margin="0,3,0,0"/>

                                            <TextBlock Text="{Binding NgayCapNhat, StringFormat='Cập nhật: {0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="12"
                                                   Foreground="#3AA0AD"
                                                   Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


                <!-- ====  CARD: QUY TRÌNH ĐANG LÀM ==== -->
                <Border Background="White" CornerRadius="12"
                    Padding="18" Margin="0 0 0 25"
                    BorderBrush="#3AA0AD" BorderThickness="1"
                    Effect="{DynamicResource DropShadow}">
                    <StackPanel>
                        <TextBlock Text="⚙ Quy trình đang thực hiện"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#2C8A8A"
                               Margin="0 0 0 12"/>

                        <ItemsControl ItemsSource="{Binding DanhSachQuyTrinhDangLam}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#EFFFFE"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0 0 0 12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TenBuoc}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>

                                            <TextBlock Text="{Binding Mota}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#6F6F6F"
                                                   Margin="0,4,0,0"/>

                                            <TextBlock Text="{Binding TrangThai, StringFormat='Trạng thái: {0}'}"
                                                   Foreground="#2C8A8A"
                                                   FontWeight="SemiBold"
                                                   Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>


            <!-- ===================================== -->
            <!-- ===========  CỘT PHẢI  ============== -->
            <!-- ===================================== -->
            <StackPanel Grid.Column="1">

                <!-- ==== LỊCH ==== -->
                <Border Background="White" CornerRadius="12"
        Padding="18" Margin="0 0 0 25"
        BorderBrush="#FF8C00" BorderThickness="1"
        Effect="{DynamicResource DropShadow}">
                    <StackPanel>
                        <DockPanel Margin="0 0 0 15" LastChildFill="False">
                            <TextBlock Text="🔥 Sắp đến hạn"
                       FontSize="20" FontWeight="SemiBold"
                       Foreground="#E65100" VerticalAlignment="Center"/>
                            <TextBlock Text="Xem tất cả" 
                       FontSize="13" Foreground="#3AA0AD" 
                       VerticalAlignment="Bottom" DockPanel.Dock="Right" Cursor="Hand"/>
                        </DockPanel>

                        <ItemsControl ItemsSource="{Binding DanhSachSapDenHan}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF3E0" CornerRadius="8" Padding="12,10" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TenCV}" FontWeight="Bold" Foreground="#BF360C" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding TenDuAn}" FontSize="12" Foreground="#EF6C00" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="8,4" Margin="10,0,0,0">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding HanHoanThanh, StringFormat='dd/MM'}" FontSize="11" FontWeight="Bold" Foreground="#E65100" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Hết hạn" FontSize="9" Foreground="Gray" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                <!-- ====  CARD DỰ ÁN MỚI NHẤT ==== -->
                <Border Background="White" CornerRadius="12"
                    Padding="18"
                    BorderBrush="#3AA0AD" BorderThickness="1"
                    Effect="{DynamicResource DropShadow}">
                    <StackPanel>
                        <TextBlock Text="📌 Dự án mới nhất"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#2C8A8A"
                               Margin="0 0 0 12"/>

                        <ItemsControl ItemsSource="{Binding DanhSachDuAnMoiNhat}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0FFFA"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0 0 0 12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TenDuAn}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>

                                            <TextBlock Text="{Binding NgayBatDau, StringFormat='Bắt đầu: {0:dd/MM/yyyy}'}"
                                                   Foreground="#6F6F6F"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
