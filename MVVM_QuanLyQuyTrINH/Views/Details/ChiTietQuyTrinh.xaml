<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Details.ChiTietQuyTrinh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Quy Trình"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    <!-- nền mờ -->

    <Grid VerticalAlignment="Center">

        <!-- ===== KHUNG VIỀN POPUP ===== -->
        <Border Background="White"
                CornerRadius="15"
                BorderBrush="#3AA0AD"
                BorderThickness="2"
                Padding="20"
                Width="900"
                Height="550">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- TIÊU ĐỀ DỰ ÁN -->
                    <TextBlock Text="{Binding TenDuAn}" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#2C8A8A"
                               Margin="0,0,0,10"/>

                    <!-- MÃ DỰ ÁN -->
                    <TextBlock Text="{Binding MaDuAn, StringFormat='Mã dự án: {0}'}"
                               FontSize="16" 
                               Foreground="Gray"/>

                    <TextBlock Text="{Binding NgayBatDau, StringFormat='Bắt đầu: {0:dd/MM/yyyy}'}" 
                               FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding NgayKetThuc, StringFormat='Kết thúc: {0:dd/MM/yyyy}'}" 
                               FontSize="16" Margin="0,0,0,10"/>

                    <Separator Margin="0,10,0,10"/>

                    <!-- DANH SÁCH BƯỚC -->
                    <TextBlock Text="Các bước trong quy trình"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding DanhSachBuoc}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1"
                                        BorderBrush="#3AA0AD"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"
                                        Padding="10">

                                    <StackPanel>
                                        <TextBlock Text="{Binding ThuTu, StringFormat='Bước {0}'}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#2C8A8A"/>

                                        <TextBlock Text="{Binding TenBuoc}" 
                                                   FontSize="16" 
                                                   Margin="0,3,0,0"/>

                                        <TextBlock Text="{Binding Mota}" 
                                                   FontSize="14" 
                                                   Foreground="Gray"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"/>

                                        <TextBlock Text="{Binding TrangThai, StringFormat='Trạng thái: {0}'}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    
             <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,15,0,0">

    <!-- Nút sửa -->
            <Button Content="✎ Sửa"
                    Width="100" Height="35"
                    Background="Orange"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Edit_Click"/>

                <Button Content="Đóng"
                Margin="20,0,0,0"
                Width="100" Height="35"
                Background="#3AA0AD"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Close_Click"/>   
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

        </Border>

    </Grid>

</Window>