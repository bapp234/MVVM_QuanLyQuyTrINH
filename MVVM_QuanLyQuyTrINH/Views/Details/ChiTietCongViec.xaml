<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Details.ChiTietCongViec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Chi Tiết Công Việc"
        Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#01FFFFFF" 
        mc:Ignorable="d">
  
    <Border Margin="20" CornerRadius="12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Opacity="0.3" ShadowDepth="5" Color="Gray"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Nội dung (Cuộn) -->
                <RowDefinition Height="Auto"/>
                <!-- Footer (Nút đóng) -->
            </Grid.RowDefinitions>

            <!-- 1. HEADER: TIÊU ĐỀ & TRẠNG THÁI -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <!-- Removed LetterSpacing property as it is not supported in WPF TextBlock -->
                    <TextBlock Text="CHI TIẾT CÔNG VIỆC" 
                               FontSize="14" FontWeight="Bold" Foreground="#90A4AE"/>
                    <TextBlock Text="{Binding CongViec.TenCv}" 
                               FontSize="24" FontWeight="Bold" Foreground="#263238" 
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Badge Trạng Thái to -->
                <Border Grid.Column="1" Background="{Binding CongViec.MauTrangThai}" 
                        CornerRadius="8" Padding="12,6" VerticalAlignment="Top">
                    <TextBlock Text="{Binding CongViec.TrangThai}" 
                               Foreground="White" FontWeight="Bold" FontSize="14"/>
                </Border>
            </Grid>

            <!-- 2. NỘI DUNG CHI TIẾT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>

                    <!-- Thông tin chung (Grid 2 cột) -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cột Trái -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <!-- Mã CV -->
                            <TextBlock Text="MÃ SỐ" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,15">
                                <TextBlock Text="#" Foreground="#CFD8DC" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CongViec.maHienThi}" FontSize="16" FontWeight="Bold" Foreground="#546E7A"/>
                            </StackPanel>

                            <!-- Độ ưu tiên -->
                            <TextBlock Text="ĐỘ ƯU TIÊN" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                            <Border Background="#FFF3E0" CornerRadius="6" Padding="10,4" HorizontalAlignment="Left" Margin="0,2,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚡ " Foreground="#FF9800"/>
                                    <TextBlock Text="{Binding CongViec.DoUuTien}" FontWeight="Bold" Foreground="#F57C00"/>
                                </StackPanel>
                            </Border>

                            <!-- Dự án -->
                            <TextBlock Text="THUỘC DỰ ÁN" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CongViec.MaDuAnNavigation.TenDuAn}" FontSize="14"
                                                    Height="35" Margin="0,5,0,15" Padding="5"
                                                     FontWeight="Bold"/>
                            <!-- Thời gian -->
                            <TextBlock Text="THỜI GIAN THỰC HIỆN" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                            <StackPanel Margin="0,2,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Bắt đầu: " Foreground="Gray"/>
                                    <TextBlock Text="{Binding CongViec.NgayGiao, StringFormat='dd/MM/yyyy'}" Foreground="#455A64"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="Hạn chót: " Foreground="Gray"/>
                                    <TextBlock Text="{Binding CongViec.HanHoanThanh, StringFormat='dd/MM/yyyy'}" 
                    FontWeight="Bold" Foreground="#E53935"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Cột Phải -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <!-- Trưởng nhóm dự án -->
                            <TextBlock Text="TRƯỞNG NHÓM DỰ ÁN" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,15">
                                <TextBlock Text="👑 " FontSize="14"/>
                                <TextBlock Text="{Binding TenTruongNhom}" 
                                    FontSize="15" Foreground="#8E44AD" FontWeight="Bold"/>
                            </StackPanel>
                            <!-- DANH SÁCH NHÂN VIÊN THAM GIA -->
                            <TextBlock Text="NHÂN VIÊN THAM GIA" 
           FontSize="11" Foreground="Gray" FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Margin="0,0,0,20">
                                <ListView ItemsSource="{Binding DanhSachThamGia}" BorderThickness="0" Height="150">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Avatar circle -->
                                                <Border Grid.Column="0" Width="26" Height="26" CornerRadius="13"
                            Background="#3AA0AD" VerticalAlignment="Center">
                                                    <TextBlock Text="👤" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" FontSize="14"/>
                                                </Border>

                                                <!-- Tên nhân viên -->
                                                <TextBlock Grid.Column="1" Text="{Binding}" FontSize="14"
                               VerticalAlignment="Center" Foreground="#455A64"
                               Margin="10,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Mô tả -->
                    <TextBlock Text="MÔ TẢ CHI TIẾT" FontSize="11" Foreground="Gray" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border Background="#F5F7F9" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <TextBlock Text="{Binding CongViec.MoTa}" 
                                   FontSize="14" Foreground="#455A64" 
                                   TextWrapping="Wrap" LineHeight="20"/>
                    </Border>

                    <!-- Lịch sử cập nhật -->
                    <TextBlock Text="LỊCH SỬ CẬP NHẬT" FontSize="11" Foreground="Gray" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="#ECEFF1" BorderThickness="1" CornerRadius="8">
                        <ListView x:Name="ListViewLichSu" Height="150" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Thời gian" Width="140" 
                                                    DisplayMemberBinding="{Binding NgayCapNhat, StringFormat='dd/MM/yyyy HH:mm'}"/>
                                    <GridViewColumn Header="Nội dung thay đổi" Width="320" 
                                                    DisplayMemberBinding="{Binding NoiDung}"/>
                                    <GridViewColumn Header="Người cập nhật" Width="130" 
                                                    DisplayMemberBinding="{Binding TenNhanVien}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- 3. FOOTER -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <!-- Corrected 'fontSize' to 'FontSize' -->
                <Button Content="Đóng" Width="120" Height="40" 
                        Background="#3AA0AD" Foreground="White" FontWeight="Bold" FontSize="14"
                        BorderThickness="0" Cursor="Hand" Click="Close_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>