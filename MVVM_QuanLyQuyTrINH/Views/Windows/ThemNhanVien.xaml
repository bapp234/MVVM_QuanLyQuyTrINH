<Window x:Class="MVVM_QuanLyQuyTrINH.Views.Windows.ThemNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Người Dùng Mới" Height="620" Width="500" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border CornerRadius="15" Background="White" BorderBrush="#3AA0AD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Thêm Tài Khoản Mới"
                           FontSize="24" FontWeight="Bold" Foreground="#3AA0AD"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Nhập thông tin nhân sự vào hệ thống"
                           FontSize="13" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">

                <TextBlock Text="Họ và tên *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtHoTen" Height="35" Padding="5" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" Padding="5" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tên đăng nhập *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTenDangNhap" Height="35" Padding="5" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Mật khẩu *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtMatKhau" Height="35" Padding="5" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Vai trò hệ thống *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbVaiTro" Height="35" Padding="10,0" 
                          VerticalContentAlignment="Center"
                          SelectionChanged="cbVaiTro_SelectionChanged">
                    <ComboBoxItem Content="Nhân Viên" Tag="3" IsSelected="True"/>
                    <ComboBoxItem Content="Quản Lý" Tag="2"/>
                    <ComboBoxItem Content="Admin" Tag="1"/>
                </ComboBox>

                <StackPanel x:Name="spThongTinBoSung" Margin="0,15,0,0">
                    <TextBlock x:Name="lblThongTinBoSung" Text="Thông tin bổ sung *" 
               FontWeight="SemiBold" Foreground="#E65100" Margin="0,0,0,5"/>

                    <TextBox x:Name="txtThongTinBoSung" Height="35" Padding="5" 
             VerticalContentAlignment="Center" BorderBrush="#FFCC80"/>

                    <ComboBox x:Name="cbCapQuanLy" Height="35" Padding="10,0" 
              VerticalContentAlignment="Center" BorderBrush="#FFCC80"
              Visibility="Collapsed">
                        <ComboBoxItem Content="Trưởng phòng" IsSelected="True"/>
                        <ComboBoxItem Content="Phó phòng"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy bỏ" Width="100" Height="40" Background="#FF0000" Foreground="White"
                        BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"
                        Click="btnCancel_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Lưu Thông Tin" Width="140" Height="40" Background="#3AA0AD" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="btnSave_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>