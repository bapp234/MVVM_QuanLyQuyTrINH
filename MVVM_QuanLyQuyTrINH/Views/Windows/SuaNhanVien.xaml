<Window x:Class="MVVM_QuanLyQuyTrINH.Views.CRUD.SuaNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh Sửa Nhân Viên" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="10" BorderBrush="#3AA0AD" BorderThickness="2" Padding="20" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TIÊU ĐỀ -->
            <TextBlock Text="✏️ Chỉnh Sửa Nhân Viên"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#3AA0AD"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- FORM -->
            <StackPanel Grid.Row="1" Margin="0,10,0,10">

                <TextBlock Text="Mã nhân viên:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SelectedNhanVien.UserId}"
                         IsReadOnly="True"
                         Background="#EEEEEE"
                         Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Họ và tên:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SelectedNhanVien.HoTen}"
                         Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Email:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SelectedNhanVien.Email}"
                         Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Vai trò:" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding ListVaiTro}"
                          SelectedItem="{Binding SelectedVaiTro}"
                          DisplayMemberPath="TenVaiTro"
                          Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Phòng ban:" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding ListPhongBan}"
                          SelectedItem="{Binding SelectedPhongBan}"
                          DisplayMemberPath="TenPb"
                          Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Mô tả vai trò:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SelectedVaiTro.MoTa}"
                         IsReadOnly="True"
                         Background="#EEEEEE"
                         Height="60"
                         TextWrapping="Wrap"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Mật khẩu mới:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBoxNew"
                             Height="30" Margin="0,5,0,10"/>
            </StackPanel>

            <!-- BUTTONS -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💾 Lưu"
                        Width="100"
                        Height="35"
                        Background="SeaGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,10,0"
                        Click="btnSave_Click"/>

                <Button Content="✖ Hủy"
                        Width="100"
                        Height="35"
                        Background="#E53935"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
