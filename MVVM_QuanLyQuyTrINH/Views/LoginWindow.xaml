<Window x:Class="MVVM_QuanLyQuyTrINH.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_QuanLyQuyTrINH"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Login"
        Height="500" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Bên trái: chào mừng -->
        <Border CornerRadius="20,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3AA0AD" Offset="0.0"/>
                    <GradientStop Color="#3AADA1" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Canvas>
                    <Polygon Points="0,20 230,140 0,270" Fill="#4EB1B6"/>
                    <Polygon Points="100,400 200,370 180,470" Fill="#4EB1B6" Canvas.Left="70" Canvas.Top="15"/>
                    <Ellipse Width="80" Height="80" Canvas.Left="186" Canvas.Top="235" Fill="#4EB1B6"/>
                    <Rectangle Width="120" Height="120" Canvas.Left="26" Canvas.Top="297" Fill="#4EB1B6"/>
                </Canvas>

                <StackPanel VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="Chào mừng trở lại!" Style="{StaticResource tittleText}" Foreground="White" Margin="0,0,0,10"/>
                    <TextBlock Text="Vui lòng đăng nhập để tiếp tục" Style="{StaticResource normalText}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Bên phải: form đăng nhập -->
        <Border Background="White" Grid.Column="1" CornerRadius="0 20 20 0">
            <Grid Margin="40">
                <!-- Nút đóng -->
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" 
                        Background="Transparent" Foreground="Gray" BorderThickness="0" 
                        FontWeight="Bold" Click="Close_Click"/>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Đăng nhập" Style="{StaticResource tittleText}" 
                               Foreground="#3AD19B" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" Height="35" Padding="10,10,5,5" BorderBrush="#3AD19B" BorderThickness="1" />

                    <TextBlock Text="Mật khẩu" FontWeight="Bold" Margin="0,15,0,5"/>

                    <!-- Mật khẩu hide/see 👁 -->
                    <Grid>
                        <PasswordBox x:Name="pwdBox" Height="35" Padding="10,10,5,5" BorderBrush="#3AD19B" BorderThickness="1" />
                        <TextBox x:Name="txtVisiblePassword" Height="35" Padding="10,10,5,5" 
                                 BorderBrush="#3AD19B" BorderThickness="1" 
                                 Visibility="Collapsed"/>
                        <Button x:Name="btnTogglePassword" Content="👁" 
                                Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Background="Transparent" BorderThickness="0"
                                Click="TogglePassword_Click"/>
                    </Grid>
                    <Button Content="Đăng nhập" Background="#3AD19B" Foreground="White" 
                            FontWeight="Bold" Height="40" Margin="0,25,0,0" BorderThickness="0" Click="Login_Click"/>

                    <!-- Quên mật khẩu -->
                    <TextBlock Text="Quên mật khẩu?" 
                               Foreground="#3AD19B" FontWeight="Bold" 
                               Cursor="Hand" HorizontalAlignment="Center" 
                               Margin="0,15,0,0" MouseDown="ForgotPassword_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
